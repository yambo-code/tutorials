&control
    calculation='nscf',
    prefix='hBN',
    pseudo_dir = './Pseudos'
    nstep = 200
    verbosity = 'high'
    wf_collect=.true.
/
&system
    ibrav = 4,
    celldm(1) = 4.716
    celldm(3) = 2.582
    nat= 4,
    ntyp= 2,
    force_symmorphic=.true.
    ecutwfc = 40,nbnd = 100
/
&electrons
   diago_thr_init=5.0e-6,
   diago_full_acc=.true.
   electron_maxstep = 100,
   diagonalization='david'
   mixing_mode = 'plain'
   mixing_beta = 0.6
 conv_thr =  1.0e-8
/
ATOMIC_SPECIES
 B 10 B.pz-vbc.UPF
 N 14 N.pz-vbc.UPF
ATOMIC_POSITIONS {crystal}
B  0.6666667  0.3333333  0.0000000
N -0.6666667 -0.3333333  0.0000000
B -0.6666667 -0.3333333  0.5000000
N  0.6666667  0.3333333  0.5000000  
K_POINTS {automatic}
6 6 2 0 0 0 
